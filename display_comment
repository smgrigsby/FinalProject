		<script>
  $(function() {
    
    function runEffect() {
      	var selectedEffect = $( "blind" ).val();
      	var options = {};
    	$( "#comments" ).show( selectedEffect, options, 500);
    };
 
  
    
 
    // set effect from select menu value
    $( "#showcomments" ).click(function() {
      runEffect();
    });
 
    $( "#showcomments" ).hide();
  });
